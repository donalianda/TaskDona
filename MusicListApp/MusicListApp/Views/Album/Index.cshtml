@model IEnumerable<MusicListApp.TRANSACT_ALBUM>
@using MusicListApp;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index Album</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Action
        </th>
        <th>
            Genre
        </th>
        <th>
           Artist
        </th>
        <th>
            Title
        </th>
        <th>
           Price
        </th>
        <th>
            Release
        </th>
        <th></th>
